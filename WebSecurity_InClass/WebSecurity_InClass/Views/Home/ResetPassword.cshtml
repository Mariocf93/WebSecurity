
@{
    ViewBag.Title = "ResetPassword";
}

<h2>Reset Your Password</h2>

@using (Html.BeginForm("ResetPassword", "Home"))
{
    <div class="form-horizontal">
        <hr />
        <input type="hidden" name="userID" value=@ViewBag.UserID />
        <div class="form-group">
            <label class="control-label col-sm-2 col-md-2" for="password">New Password:</label>
            <div class="col-md-10 col-sm-10">
                <input class="form-control" type="text" name="password" />
            </div>
        </div>
        <br />
        <input type="hidden" name="passwordToken" value=@ViewBag.PasswordToken />
        <div class="form-group">
            <label class="control-label col-sm-2 col-md-2" for="passwordConfirm">Confirm Password:</label>
            <div class="col-sm-10 col-md-10">
                <input class="form-control" type="text" name="passwordConfirm" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-sm-offset-1 col-md-10 col-sm-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@Html.Raw(ViewBag.Result)
