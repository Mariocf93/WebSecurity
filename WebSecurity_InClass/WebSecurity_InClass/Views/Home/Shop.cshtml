
@{
    ViewBag.Title = "Shop";
}

<h2>Shop</h2>
<h3>Book a Seat By Buying Our Ticket(s)</h3>
<form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post" target="_top">
    <div class="form-horizontal">
        <input type="hidden" name="cmd" value="_s-xclick">
        <input type='hidden' name='country' value='Canada'>
        <input type='hidden' name='lc' value='CA'>
        <input type='hidden' name='address1' value='100-9999 Norman Avenue'>
        <input type='hidden' name='city' value='Vancouver'>
        <input type='hidden' name='state' value='British Columbia'>
        <input type='hidden' name='zip' value='V4C5H9'>
        <input type='hidden' name='night_phone_a' value='6139217786'>
        <div class="form-group">
            <label for="email" class="control-label col-sm-2 col-md-2">Email:</label>
            <div class="col-md-10 col-sm-10">
                <input class="form-control" type='text' name='email' value=''><br />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2 col-md-2" for="first_name">First Name:</label>
            <div class="col-md-10 col-sm-10">
                <input class="form-control" type='text' name='first_name' value=''><br />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2 col-md-2" for="last_name">Last Name:</label>
            <div class="col-md-10 col-sm-10">
                <input class="form-control" type='text' name='last_name' value=''><br />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2 col-md-2" for="quantity">How Many Tickets:</label>
            <div class="col-md-10 col-sm-10">
                <input class="form-control" type="number" name="quantity" value="0" /><br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-sm-10">
                <h4> Billing information is pre-populated for convenience sakes</h4>
            </div>
        </div>
        <input type="hidden" name="item_name" value="Concert Ticket" />
        <input type='hidden' name='custom' value='@ViewBag.SessionID'>
        <input type="hidden" name="currency_code" value="CDN">
        <input type="hidden" name="hosted_button_id" value="5327MFJ3QWZT6">
        <div class="form-group">
            <div class="col-md-offset-1 col-sm-offset-1 col-md-10 col-sm-10">
                <input type="image" src="https://www.sandbox.paypal.com/en_US/i/btn/btn_paynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                <img alt="" border="0" src="https://www.sandbox.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1">
            </div>
        </div>
    </div>
</form>
<table class="table table-hover">
    <tr>
        <th>Credit Card Number</th>
        <th>CVV</th>
        <th>Expiry Month</th>
        <th>Expiry Year</th>
    </tr>
