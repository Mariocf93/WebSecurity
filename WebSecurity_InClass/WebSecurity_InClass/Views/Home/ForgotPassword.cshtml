
@{
    ViewBag.Title = "ForgotPassword";
}

<h2>Forgot Password</h2>

@using (Html.BeginForm("ForgotPassword", "Home"))
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="control-label col-sm-2 col-md-2" for="email">Email:</label>
           <div class="col-md-10 col-sm-10">
               <input class="form-control" type="text" name="email" />
           </div>
        </div>
        <div class="g-recaptcha inp50" data-sitekey="6LchWBgTAAAAAGDJ4F7sOiAicFOzIKWcDSg-jk64"></div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-md-offset-2 col-md-10 col-sm-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
   <span class="alert-success">@Html.Raw(ViewBag.CaptchaResponse)</span> 
    <span class="alert-success">@Html.Raw(ViewBag.Response)</span>
}
