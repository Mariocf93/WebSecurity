<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Page</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Images/centurionSecurityLogo.png"  />
                @Html.ActionLink("Centurion", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        if (Request.IsAuthenticated && (User.IsInRole("Mario")))
                        {
                            <li>@Html.ActionLink("Ticket Store", "Shop", "Home", new { area = "" }, new { @class = "navbar-nav" })</li>
                            <li>@Html.ActionLink("Attendees", "Attendees", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                            <li>@Html.ActionLink("Secure Area", "SecureArea", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                            <li>@Html.ActionLink("Managers", "ManagersOnly", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                            <li>@Html.ActionLink("Admin", "AdminOnly", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                            <li style="color:white" class="navbar-nav"><h4>[@User.Identity.Name]</h4></li>
                        }
                        else if (Request.IsAuthenticated && (User.IsInRole("Manager")))
                        {
                            <li>@Html.ActionLink("Ticket Store", "Shop", "Home", new { area = "" }, new { @class = "navbar-nav" })</li>
                            <li>@Html.ActionLink("Attendees", "Attendees", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                            <li>@Html.ActionLink("Secure Area", "SecureArea", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                            <li>@Html.ActionLink("Managers", "ManagersOnly", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                            <li style="color:white" class="navbar-nav"><h4>[@User.Identity.Name]</h4></li>
                        }
                        else if (Request.IsAuthenticated && (User.IsInRole("Staff")))
                        {
                            <li>@Html.ActionLink("Ticket Store", "Shop", "Home", new { area = "" }, new { @class = "navbar-nav" })</li>
                            <li>@Html.ActionLink("Attendees", "Attendees", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                    <li>@Html.ActionLink("Secure Area", "SecureArea", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                            <li>@Html.ActionLink("Staff", "Staff", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "navbar-nav" });</li>
                            <li style="color:white" class="navbar-nav"><h4>[@User.Identity.Name]</h4></li>
                        }
                        else
                        {
                            if (ViewBag.Title == "Register")
                            {
                                <li>@Html.ActionLink("Login", "Index", "Home", new { area = "" }, new { @class = "navbar-nav" })</li>
                                <li>@Html.ActionLink("Ticket Store", "Shop", "Home", new { area = "" }, new { @class = "navbar-nav" })</li>

                            }
                            else if (ViewBag.Title == "Index")
                            {
                                <li>@Html.ActionLink("Register", "Register", "Home", new { area = "" }, new { @class = "navbar-nav" })</li>           
                                 <li>@Html.ActionLink("Ticket Store", "Shop", "Home", new { area = "" }, new { @class = "navbar-nav" })</li>


                            }
                            else if (ViewBag.Title == "ForgotPassword")
                            {
                                <li>@Html.ActionLink("Register", "Register", "Home", new { area = "" }, new { @class = "navbar-nav" })</li>
                                <li>@Html.ActionLink("Login", "Index", "Home", new { area = "" }, new { @class = "navbar-nav" })</li>
                                <li>@Html.ActionLink("Ticket Store", "Shop", "Home", new { area = "" }, new { @class = "navbar-nav" })</li>


                            }
                            else
                            {
                                <li>@Html.ActionLink("Login", "Index", "Home", new { area = "" }, new { @class = "navbar-nav" })</li>
                                <li>@Html.ActionLink("Ticket Store", "Shop", "Home", new { area = "" }, new { @class = "navbar-nav" })</li>

                            }
                        }
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
                @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mario's Login Page Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>